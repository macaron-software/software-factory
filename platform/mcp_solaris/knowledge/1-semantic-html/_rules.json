{
  "_meta": {
    "description": "Rules for converting Figma node names to semantic HTML elements",
    "version": "1.0.0",
    "updated": "2026-01-06"
  },

  "name_patterns": {
    "button|btn|cta|action": {
      "element": "button",
      "attributes": { "type": "button" },
      "priority": 10
    },
    "submit": {
      "element": "button",
      "attributes": { "type": "submit" },
      "priority": 10
    },
    "link|lien|href": {
      "element": "a",
      "attributes": { "href": "#" },
      "priority": 10
    },
    "back-link|retour": {
      "element": "a",
      "attributes": { "href": "#" },
      "priority": 10
    },
    "input|field|champ|text-field": {
      "element": "input",
      "attributes": { "type": "text" },
      "priority": 9,
      "void_element": true,
      "requires_no_children": true
    },
    "password": {
      "element": "input",
      "attributes": { "type": "password" },
      "priority": 10,
      "void_element": true
    },
    "email": {
      "element": "input",
      "attributes": { "type": "email" },
      "priority": 10,
      "void_element": true
    },
    "search|recherche": {
      "element": "input",
      "attributes": { "type": "search" },
      "priority": 9,
      "void_element": true
    },
    "textarea|text-area|multiline": {
      "element": "textarea",
      "priority": 10
    },
    "label|étiquette|libellé": {
      "element": "label",
      "priority": 8
    },
    "title|titre|heading": {
      "element": "h2",
      "dynamic_level": true,
      "priority": 7
    },
    "paragraph|paragraphe": {
      "element": "p",
      "priority": 5,
      "requires_no_children_flow": true
    },
    "list|liste": {
      "element": "ul",
      "priority": 8
    },
    "ordered-list|numbered-list": {
      "element": "ol",
      "priority": 8
    },
    "item|élément|list-item": {
      "element": "li",
      "context_required": "list",
      "priority": 7
    },
    "image|img|photo|picture": {
      "element": "img",
      "attributes": { "alt": "" },
      "priority": 9,
      "void_element": true
    },
    "icon|icône|pictogram": {
      "element": "img",
      "attributes": { "alt": "", "aria-hidden": "true" },
      "priority": 8
    },
    "svg|vector": {
      "element": "svg",
      "attributes": { "aria-hidden": "true" },
      "priority": 8
    },
    "nav|navigation|menu": {
      "element": "nav",
      "attributes": { "role": "navigation" },
      "priority": 9
    },
    "header|en-tête|masthead": {
      "element": "header",
      "priority": 9,
      "context": "page-level"
    },
    "footer|pied|bas-de-page": {
      "element": "footer",
      "priority": 9,
      "context": "page-level"
    },
    "main|contenu-principal": {
      "element": "main",
      "priority": 9
    },
    "section": {
      "element": "section",
      "priority": 6
    },
    "article": {
      "element": "article",
      "priority": 7
    },
    "aside|sidebar|complementaire": {
      "element": "aside",
      "priority": 7
    },
    "form|formulaire": {
      "element": "form",
      "priority": 9
    },
    "fieldset|groupe-champs": {
      "element": "fieldset",
      "priority": 8
    },
    "legend|légende": {
      "element": "legend",
      "context_required": "fieldset",
      "priority": 8
    },
    "table|tableau": {
      "element": "table",
      "priority": 9
    },
    "thead|table-header": {
      "element": "thead",
      "context_required": "table",
      "priority": 8
    },
    "tbody|table-body": {
      "element": "tbody",
      "context_required": "table",
      "priority": 8
    },
    "row|ligne|tr": {
      "element": "tr",
      "context_required": "table",
      "priority": 8
    },
    "th|header-cell": {
      "element": "th",
      "context_required": "table",
      "priority": 8
    },
    "td|cell|cellule": {
      "element": "td",
      "context_required": "table",
      "priority": 7
    },
    "checkbox|case-a-cocher": {
      "element": "input",
      "attributes": { "type": "checkbox" },
      "priority": 10,
      "void_element": true
    },
    "radio|bouton-radio": {
      "element": "input",
      "attributes": { "type": "radio" },
      "priority": 10,
      "void_element": true
    },
    "switch|toggle|interrupteur": {
      "element": "button",
      "attributes": { "role": "switch", "aria-checked": "false" },
      "priority": 10
    },
    "select|dropdown|liste-deroulante": {
      "element": "div",
      "attributes": { "role": "combobox", "aria-expanded": "false", "aria-haspopup": "listbox" },
      "priority": 9
    },
    "listbox|options": {
      "element": "div",
      "attributes": { "role": "listbox" },
      "priority": 9
    },
    "option": {
      "element": "div",
      "attributes": { "role": "option" },
      "context_required": "listbox",
      "priority": 8
    },
    "modal|dialog|modale|popup": {
      "element": "dialog",
      "attributes": { "role": "dialog", "aria-modal": "true" },
      "priority": 10
    },
    "tooltip|infobulle": {
      "element": "div",
      "attributes": { "role": "tooltip" },
      "priority": 8
    },
    "tab|onglet": {
      "element": "button",
      "attributes": { "role": "tab" },
      "priority": 9
    },
    "tablist|tabs-container": {
      "element": "div",
      "attributes": { "role": "tablist" },
      "priority": 9
    },
    "tabpanel|panel|panneau": {
      "element": "div",
      "attributes": { "role": "tabpanel" },
      "priority": 8
    },
    "accordion": {
      "element": "div",
      "wcag_pattern": "accordion",
      "priority": 9
    },
    "accordion-trigger|accordion-header": {
      "element": "button",
      "attributes": { "aria-expanded": "false" },
      "priority": 9
    },
    "accordion-content|accordion-panel": {
      "element": "div",
      "attributes": { "role": "region" },
      "priority": 8
    },
    "alert|notification|message": {
      "element": "div",
      "attributes": { "role": "alert" },
      "priority": 9
    },
    "status|badge|tag|chip": {
      "element": "span",
      "attributes": { "role": "status" },
      "priority": 7
    },
    "divider|separator|séparateur": {
      "element": "hr",
      "attributes": { "role": "separator" },
      "priority": 7,
      "void_element": true
    },
    "loader|spinner|loading": {
      "element": "div",
      "attributes": { "role": "progressbar", "aria-busy": "true" },
      "priority": 8
    },
    "progress|progressbar": {
      "element": "progress",
      "priority": 8
    },
    "breadcrumb|fil-ariane": {
      "element": "nav",
      "attributes": { "aria-label": "Fil d'Ariane" },
      "priority": 9
    },
    "pagination": {
      "element": "nav",
      "attributes": { "aria-label": "Pagination" },
      "priority": 9
    },
    "carousel|slider|carrousel": {
      "element": "section",
      "attributes": { "aria-roledescription": "carousel" },
      "priority": 9
    },
    "slide|carousel-item": {
      "element": "div",
      "attributes": { "role": "group", "aria-roledescription": "slide" },
      "priority": 8
    },
    "skip-link|lien-evitement": {
      "element": "a",
      "attributes": { "href": "#main-content", "class": "skip-link" },
      "priority": 10
    },
    "visually-hidden|sr-only": {
      "element": "span",
      "attributes": { "class": "visually-hidden" },
      "priority": 6
    }
  },

  "figma_type_mapping": {
    "TEXT": {
      "default": "span",
      "block_context": "p",
      "heading_context": "h2"
    },
    "VECTOR": {
      "default": "svg",
      "attributes": { "aria-hidden": "true" }
    },
    "FRAME": {
      "default": "div"
    },
    "GROUP": {
      "default": "div"
    },
    "INSTANCE": {
      "resolve": true,
      "fallback": "div"
    },
    "COMPONENT": {
      "default": "div"
    },
    "LINE": {
      "element": "hr",
      "attributes": { "aria-hidden": "true" },
      "void_element": true
    },
    "RECTANGLE": {
      "default": "div"
    },
    "ELLIPSE": {
      "default": "div"
    }
  },

  "structure_inference": {
    "parent_child_rules": [
      {
        "if_parent_contains": "list|menu",
        "and_child_contains": "item",
        "then": { "parent": "ul", "child": "li" }
      },
      {
        "if_parent_contains": "tablist|tabs",
        "and_child_contains": "tab",
        "then": { "parent": "div[role=tablist]", "child": "button[role=tab]" }
      },
      {
        "if_parent_contains": "listbox|options",
        "and_child_contains": "option|item",
        "then": { "parent": "div[role=listbox]", "child": "div[role=option]" }
      },
      {
        "if_parent_contains": "table",
        "and_child_contains": "row",
        "then": { "parent": "table", "child": "tr" }
      },
      {
        "if_parent_contains": "row",
        "and_child_contains": "cell|data",
        "then": { "parent": "tr", "child": "td" }
      },
      {
        "if_parent_contains": "form",
        "and_child_contains": "group|fieldset",
        "then": { "parent": "form", "child": "fieldset" }
      },
      {
        "if_parent_contains": "radio-group|checkbox-group",
        "and_child_contains": "radio|checkbox",
        "then": { "parent": "fieldset", "child": "input" }
      }
    ]
  },

  "context_rules": {
    "heading_level": {
      "description": "Determine heading level based on nesting depth",
      "base_level": 1,
      "max_level": 6,
      "increment_on": ["section", "article", "aside", "nav"]
    },
    "list_context": {
      "description": "Items become li only inside ul/ol",
      "triggers": ["ul", "ol", "menu"]
    },
    "table_context": {
      "description": "Rows and cells only inside table",
      "triggers": ["table", "thead", "tbody", "tfoot"]
    }
  }
}
