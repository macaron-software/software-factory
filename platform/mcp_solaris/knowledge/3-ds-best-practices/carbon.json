{
  "_meta": {
    "source": "carbon-design-system",
    "url": "https://carbondesignsystem.com/",
    "version": "11.x",
    "updated": "2026-01-06"
  },

  "global": {
    "spacing": {
      "scale": [0, 2, 4, 8, 12, 16, 24, 32, 40, 48],
      "unit": "rem",
      "base": "16px"
    },
    "motion": {
      "duration": {
        "fast-01": "70ms",
        "fast-02": "110ms",
        "moderate-01": "150ms",
        "moderate-02": "240ms",
        "slow-01": "400ms",
        "slow-02": "700ms"
      },
      "easing": {
        "standard": "cubic-bezier(0.2, 0, 0.38, 0.9)",
        "entrance": "cubic-bezier(0, 0, 0.38, 0.9)",
        "exit": "cubic-bezier(0.2, 0, 1, 0.9)"
      }
    },
    "layer": {
      "z_index": {
        "dropdown": 9100,
        "modal": 9000,
        "overlay": 8000,
        "tooltip": 9200
      }
    }
  },

  "components": {
    "button": {
      "heights": {
        "sm": "32px",
        "md": "40px",
        "lg": "48px",
        "xl": "64px",
        "2xl": "80px"
      },
      "icon_only_widths": {
        "sm": "32px",
        "md": "40px",
        "lg": "48px"
      },
      "focus": {
        "outline": "2px solid",
        "outline_offset": "2px"
      },
      "skeleton": {
        "animation": "skeleton 3s ease-in-out infinite"
      }
    },

    "text_input": {
      "heights": {
        "sm": "32px",
        "md": "40px",
        "lg": "48px"
      },
      "label": {
        "position": "above",
        "margin_bottom": "8px",
        "font_size": "0.75rem"
      },
      "helper_text": {
        "position": "below",
        "margin_top": "4px",
        "font_size": "0.75rem"
      },
      "states": {
        "focus": {
          "border_bottom_width": "2px"
        },
        "invalid": {
          "border_color": "support-error",
          "icon": "warning--filled"
        },
        "disabled": {
          "cursor": "not-allowed",
          "opacity": 0.5
        }
      }
    },

    "dropdown": {
      "menu": {
        "max_height": "304px",
        "shadow": "0 2px 6px rgba(0,0,0,0.2)"
      },
      "option_height": "40px",
      "keyboard": {
        "type_ahead_delay": "500ms"
      }
    },

    "checkbox": {
      "size": "16px",
      "border_radius": "2px",
      "indeterminate": {
        "icon": "horizontal line instead of check"
      }
    },

    "toggle": {
      "track": {
        "width": "48px",
        "height": "24px"
      },
      "thumb": {
        "size": "18px"
      },
      "small": {
        "track_width": "32px",
        "track_height": "16px",
        "thumb_size": "10px"
      }
    },

    "modal": {
      "sizes": {
        "xs": "320px",
        "sm": "480px",
        "md": "640px",
        "lg": "896px"
      },
      "overlay_color": "rgba(22, 22, 22, 0.7)",
      "animation": {
        "entrance": "modal-entrance 240ms cubic-bezier(0, 0, 0.38, 0.9)",
        "exit": "modal-exit 200ms cubic-bezier(0.2, 0, 1, 0.9)"
      }
    },

    "notification": {
      "variants": ["inline", "toast"],
      "kinds": ["error", "info", "success", "warning"],
      "toast_timeout": "5000ms",
      "auto_dismiss": true
    },

    "accordion": {
      "transition": "max-height 240ms cubic-bezier(0.2, 0, 0.38, 0.9)",
      "chevron_position": "right",
      "flush_alignment": true
    },

    "tabs": {
      "indicator": {
        "position": "bottom",
        "height": "2px"
      },
      "contained_variant": {
        "background": "layer-01",
        "padding": "0 16px"
      }
    },

    "data_table": {
      "row_heights": {
        "xs": "24px",
        "sm": "32px",
        "md": "40px",
        "lg": "48px",
        "xl": "64px"
      },
      "zebra_striping": true,
      "sticky_header": true
    },

    "tooltip": {
      "delay_show": "100ms",
      "delay_hide": "300ms",
      "max_width": "288px",
      "padding": "8px 16px"
    }
  }
}
