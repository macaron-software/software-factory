{
  "_meta": {
    "description": "Interactive states mapping for all Solaris components",
    "version": "1.0.0",
    "updated": "2026-01-08"
  },

  "state_to_css": {
    "default": { "css": "", "note": "Base state, no modifier needed" },
    "hover": { "css": ":hover:not([disabled]):not([aria-disabled='true'])" },
    "focus": { "css": ":focus-visible" },
    "active": { "css": ":active:not([disabled])" },
    "pressed": { "css": ":active, [aria-pressed='true']" },
    "disabled": { "css": "[disabled], [aria-disabled='true']", "pointer_events": "none" },
    "loading": { "css": "[aria-busy='true'], [data-state='loading']", "pointer_events": "none" },
    "error": { "css": "[aria-invalid='true'], [data-state='error']" },
    "selected": { "css": "[aria-selected='true'], [aria-checked='true']" },
    "expanded": { "css": "[aria-expanded='true']" },
    "collapsed": { "css": "[aria-expanded='false']" },
    "open": { "css": "[aria-expanded='true'], [data-state='open']" },
    "closed": { "css": "[aria-expanded='false'], [data-state='closed']" },
    "current": { "css": "[aria-current='page']", "focusable": false },
    "readonly": { "css": "[readonly], [aria-readonly='true']" },
    "filled": { "css": "[data-state='filled'], :not(:placeholder-shown)" },
    "indeterminate": { "css": "[aria-checked='mixed'], :indeterminate" }
  },

  "components": {
    "accordion": {
      "states": ["collapsed", "expanded", "disabled", "focus", "hover"],
      "trigger_element": "button",
      "panel_element": "div",
      "aria": {
        "trigger": ["aria-expanded", "aria-controls"],
        "panel": ["aria-labelledby"]
      },
      "css_overrides": {
        "hover": { "background": "var(--color-neutral-bg)" },
        "focus": { "outline": "2px solid var(--color-callout-border-info)" },
        "expanded": { "panel_display": "block" },
        "collapsed": { "panel_display": "none" }
      }
    },

    "button": {
      "states": ["default", "hover", "focus", "pressed", "disabled", "loading"],
      "element": "button",
      "styles": {
        "primary": {
          "default": "var(--color-primary)",
          "hover": "var(--color-primary-hover)",
          "focus": "var(--color-primary-hover)"
        },
        "neutral": {
          "default": "var(--color-neutral-90)",
          "hover": "var(--color-neutral-hover)"
        },
        "critical": {
          "default": "var(--color-critical)",
          "hover": "brightness(0.9)"
        },
        "onstrong": {
          "default": "var(--color-white)",
          "hover": "var(--color-onstrong-hover)"
        }
      }
    },

    "checkbox": {
      "states": ["unselected", "selected", "indeterminate", "disabled", "error", "focus", "hover"],
      "element": "input[type='checkbox']",
      "aria": ["aria-checked"],
      "css_overrides": {
        "selected": { "background": "var(--color-primary)", "border": "var(--color-primary)" },
        "error": { "border": "var(--color-critical)" },
        "disabled": { "opacity": "0.5" }
      }
    },

    "chips": {
      "states": ["default", "selected", "disabled", "focus", "hover"],
      "element": "button",
      "css_overrides": {
        "selected": { "background": "var(--color-primary)", "color": "var(--color-white)" },
        "hover": { "background": "var(--color-primary-light)" }
      }
    },

    "dropdown": {
      "states": ["closed", "open", "disabled", "error", "focus", "hover", "filled"],
      "trigger_element": "button",
      "listbox_element": "ul",
      "aria": {
        "trigger": ["aria-haspopup='listbox'", "aria-expanded"],
        "listbox": ["role='listbox'"]
      }
    },

    "inputs": {
      "states": ["enabled", "disabled", "error", "focus", "hover", "filled", "readonly"],
      "element": "input",
      "css_overrides": {
        "focus": { "border": "var(--color-primary)", "outline": "none" },
        "error": { "border": "var(--color-critical)" },
        "disabled": { "background": "var(--color-neutral-bg)", "cursor": "not-allowed" }
      }
    },

    "links": {
      "states": ["default", "hover", "focus"],
      "element": "a",
      "css_overrides": {
        "hover": { "text_decoration": "underline" },
        "focus": { "outline": "2px solid var(--color-callout-border-info)" }
      }
    },

    "listbox": {
      "states": ["default", "hover", "focus"],
      "element": "div[role='listbox']",
      "option_element": "div[role='option']"
    },

    "radiobutton": {
      "states": ["unselected", "selected", "disabled", "error", "focus", "hover"],
      "element": "input[type='radio']",
      "aria": ["aria-checked"]
    },

    "select": {
      "states": ["closed", "open", "disabled", "error", "focus", "hover", "filled", "readonly"],
      "trigger_element": "button",
      "aria": ["aria-haspopup='listbox'", "aria-expanded"]
    },

    "switch": {
      "states": ["off", "on", "disabled", "error", "focus", "hover"],
      "element": "button[role='switch']",
      "aria": ["aria-checked"],
      "css_overrides": {
        "on": { "background": "var(--color-primary)" },
        "off": { "background": "var(--color-neutral-40)" }
      }
    },

    "tabs": {
      "states": ["unselected", "selected", "disabled", "focus", "hover"],
      "tab_element": "button[role='tab']",
      "panel_element": "div[role='tabpanel']",
      "aria": {
        "tab": ["aria-selected", "aria-controls"],
        "panel": ["aria-labelledby"]
      }
    },

    "textarea": {
      "states": ["enabled", "disabled", "error", "focus", "hover", "filled", "readonly"],
      "element": "textarea"
    },

    "tiles": {
      "states": ["default", "selected", "disabled", "focus", "hover", "pressed", "expanded"],
      "element": "button",
      "aria": ["aria-selected", "aria-expanded"]
    },

    "loader": {
      "states": ["default"],
      "element": "div[role='progressbar']",
      "aria": ["aria-valuemin", "aria-valuemax", "aria-valuenow", "aria-label"],
      "animation": "spin 1s linear infinite",
      "note": "Spinner should inherit color from parent or use style variant"
    }
  }
}
