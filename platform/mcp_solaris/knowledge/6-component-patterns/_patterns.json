{
  "_meta": {
    "description": "Component patterns extracted from 166 validated Solaris components",
    "version": "1.0.0",
    "updated": "2026-01-07",
    "source": "Analyzed from design-system/figma-data/*-all-depth10.json"
  },

  "variant_properties": {
    "_description": "Common Figma variant properties and their CSS mappings",
    
    "State": {
      "frequency": 3351,
      "values": {
        "Default": { "css_class": "", "is_default": true },
        "Hover": { "css_class": "--hover", "pseudo": ":hover" },
        "Focus": { "css_class": "--focus", "pseudo": ":focus-visible" },
        "Pressed": { "css_class": "--pressed", "pseudo": ":active" },
        "Disabled": { "css_class": "--disabled", "pseudo": "[disabled]", "aria": "aria-disabled=\"true\"" },
        "Loading": { "css_class": "--loading", "aria": "aria-busy=\"true\"" },
        "Selected": { "css_class": "--selected", "aria": "aria-selected=\"true\"" },
        "Error": { "css_class": "--error", "aria": "aria-invalid=\"true\"" },
        "Success": { "css_class": "--success" },
        "Expanded": { "css_class": "--expanded", "aria": "aria-expanded=\"true\"" },
        "Collapsed": { "css_class": "--collapsed", "aria": "aria-expanded=\"false\"" }
      }
    },

    "Size": {
      "frequency": 3191,
      "values": {
        "XSmall": { "css_class": "--xs", "alias": ["Extra Small", "XS"] },
        "Small": { "css_class": "--sm", "alias": ["S"] },
        "Medium": { "css_class": "--md", "is_default": true, "alias": ["M"] },
        "Large": { "css_class": "--lg", "alias": ["L"] },
        "XLarge": { "css_class": "--xl", "alias": ["Extra Large", "XL"] }
      },
      "affects": ["height", "min-height", "padding", "font-size", "gap"]
    },

    "Style": {
      "frequency": 2989,
      "values": {
        "Primary": { "css_class": "--primary", "is_default": true },
        "Neutral": { "css_class": "--neutral" },
        "Critical": { "css_class": "--critical", "alias": ["Error", "Danger"] },
        "Success": { "css_class": "--success" },
        "Warning": { "css_class": "--warning" },
        "Info": { "css_class": "--info" },
        "OnStrong": { "css_class": "--on-strong", "context": "dark_background" },
        "Brand primary": { "css_class": "--brand-primary" },
        "Brand accent themable": { "css_class": "--brand-accent" }
      },
      "affects": ["background-color", "color", "border-color"]
    },

    "Type": {
      "frequency": 2194,
      "values": {
        "Filled": { "css_class": "--filled", "is_default": true },
        "Ghost": { "css_class": "--ghost" },
        "Outlined strong": { "css_class": "--outlined-strong" },
        "Outlined soft": { "css_class": "--outlined-soft" },
        "Text": { "css_class": "--text" },
        "Angle": { "css_class": "--angle" },
        "Rounded": { "css_class": "--rounded" },
        "Square": { "css_class": "--square" }
      },
      "affects": ["background-color", "border", "border-radius"]
    },

    "Icon": {
      "frequency": 936,
      "values": {
        "None": { "css_class": "--icon-none", "is_default": true, "hide_icon": true },
        "Left": { "css_class": "--icon-left", "icon_order": -1 },
        "Right": { "css_class": "--icon-right", "icon_order": 1 },
        "Icon only": { "css_class": "--icon-only", "hide_label": true }
      },
      "affects": ["flex-direction", "content-visibility"]
    },

    "Device": {
      "frequency": 272,
      "values": {
        "Desktop": { "css_class": "--desktop", "is_default": true, "breakpoint": ">= 1024px" },
        "Tablet": { "css_class": "--tablet", "breakpoint": "768px - 1023px" },
        "Mobile": { "css_class": "--mobile", "breakpoint": "< 768px" }
      },
      "affects": ["width", "padding", "layout"]
    },

    "Compact": {
      "frequency": 208,
      "values": {
        "No": { "css_class": "", "is_default": true },
        "Yes": { "css_class": "--compact" }
      },
      "affects": ["padding", "gap", "height"]
    },

    "Active": {
      "frequency": 202,
      "values": {
        "False": { "css_class": "", "is_default": true },
        "True": { "css_class": "--active", "aria": "aria-current=\"true\"" }
      }
    },

    "Direction": {
      "frequency": 122,
      "values": {
        "Horizontal": { "css_class": "--horizontal", "layout": "flex-direction: row" },
        "Vertical": { "css_class": "--vertical", "layout": "flex-direction: column" }
      }
    }
  },

  "layout_patterns": {
    "_description": "Common layout patterns from Figma auto-layout",
    "VERTICAL": {
      "frequency": 395,
      "css": "display: flex; flex-direction: column;",
      "common_in": ["cards", "forms", "lists", "modals"]
    },
    "HORIZONTAL": {
      "frequency": 269,
      "css": "display: flex; flex-direction: row;",
      "common_in": ["buttons", "navigation", "tabs", "chips"]
    },
    "NONE": {
      "frequency": 62,
      "css": "display: block; position: relative;",
      "common_in": ["absolute positioned elements", "icons"]
    }
  },

  "nesting_depth": {
    "_description": "Common nesting depths in component structure",
    "depth_0": { "frequency": 10, "typical": "atomic elements (icons, text)" },
    "depth_1": { "frequency": 73, "typical": "simple components (badge, chip)" },
    "depth_2": { "frequency": 53, "typical": "basic components (button, input)" },
    "depth_3": { "frequency": 107, "typical": "medium components (card, notification)" },
    "depth_4": { "frequency": 82, "typical": "complex components (dropdown, modal)" },
    "depth_5": { "frequency": 76, "typical": "compound components (form, header)" },
    "depth_6_plus": { "frequency": 325, "typical": "nested structures (table, carousel)" }
  },

  "naming_conventions": {
    "_description": "Figma naming patterns to CSS class mappings",
    "prefixes": {
      ".Part-": { "css_pattern": "{parent}__{part-name}", "role": "internal_part" },
      ".Item-": { "css_pattern": "{parent}__item-{name}", "role": "list_item" },
      ".Element-": { "css_pattern": "{parent}__element", "role": "atomic_element" }
    },
    "special_names": {
      "Content": { "css_class": "__content", "role": "main_content_area" },
      "Container": { "css_class": "__container", "role": "wrapper" },
      "Wrapper": { "css_class": "__wrapper", "role": "outer_wrapper" },
      "Header": { "css_class": "__header", "role": "header_section" },
      "Footer": { "css_class": "__footer", "role": "footer_section" },
      "Body": { "css_class": "__body", "role": "body_content" },
      "Actions": { "css_class": "__actions", "role": "action_buttons" },
      "Icon": { "css_class": "__icon", "role": "icon_element" },
      "Label": { "css_class": "__label", "role": "text_label" },
      "Text": { "css_class": "__text", "role": "text_content" }
    }
  },

  "cross_property_rules": {
    "_description": "Properties that interact to produce specific CSS",
    "Size_x_Icon": {
      "description": "Icon dimensions vary by Size",
      "rule": "Icon only + Size=Large â†’ width equals height (square)",
      "example": {
        "Size=Small, Icon=Icon only": "width: 32px; height: 32px;",
        "Size=Medium, Icon=Icon only": "width: 48px; height: 48px;",
        "Size=Large, Icon=Icon only": "width: 56px; height: 56px;"
      }
    },
    "Style_x_State": {
      "description": "State colors vary by Style",
      "rule": "Hover applies filter brightness based on Style fill",
      "example": {
        "Style=Primary, State=Hover": "filter: brightness(1.1);",
        "Style=Ghost, State=Hover": "background-color: rgba(0, 61, 165, 0.08);"
      }
    },
    "Type_x_State": {
      "description": "Ghost/Outlined have different state treatments",
      "rule": "Ghost has visible background on hover, Filled uses brightness",
      "example": {
        "Type=Filled, State=Hover": "filter: brightness(1.1);",
        "Type=Ghost, State=Hover": "background-color: var(--color-surface-hover);"
      }
    }
  },

