{
  "_meta": {
    "description": "Mapping Figma node properties to CSS properties",
    "version": "1.0.0",
    "updated": "2026-01-07",
    "source": "Extracted from 166 validated component sets"
  },

  "layout": {
    "layoutMode": {
      "HORIZONTAL": { "css": "display: flex; flex-direction: row;" },
      "VERTICAL": { "css": "display: flex; flex-direction: column;" },
      "NONE": { "css": "display: block;" }
    },
    "primaryAxisAlignItems": {
      "MIN": { "css": "justify-content: flex-start;" },
      "CENTER": { "css": "justify-content: center;" },
      "MAX": { "css": "justify-content: flex-end;" },
      "SPACE_BETWEEN": { "css": "justify-content: space-between;" }
    },
    "counterAxisAlignItems": {
      "MIN": { "css": "align-items: flex-start;" },
      "CENTER": { "css": "align-items: center;" },
      "MAX": { "css": "align-items: flex-end;" },
      "BASELINE": { "css": "align-items: baseline;" }
    },
    "layoutWrap": {
      "WRAP": { "css": "flex-wrap: wrap;" },
      "NO_WRAP": { "css": "flex-wrap: nowrap;" }
    },
    "layoutSizingHorizontal": {
      "FIXED": { "css_property": "width", "use_absoluteBoundingBox": true },
      "HUG": { "css": "width: fit-content;" },
      "FILL": { "css": "flex: 1 1 0; min-width: 0;" }
    },
    "layoutSizingVertical": {
      "FIXED": { "css_property": "height", "use_absoluteBoundingBox": true },
      "HUG": { "css": "height: fit-content;" },
      "FILL": { "css": "flex: 1 1 0; min-height: 0;" }
    },
    "itemSpacing": {
      "type": "number",
      "css_property": "gap",
      "tokenize": "spacing"
    },
    "paddingTop": { "css_property": "padding-top", "tokenize": "spacing" },
    "paddingRight": { "css_property": "padding-right", "tokenize": "spacing" },
    "paddingBottom": { "css_property": "padding-bottom", "tokenize": "spacing" },
    "paddingLeft": { "css_property": "padding-left", "tokenize": "spacing" },
    "layoutPositioning": {
      "AUTO": { "css": "position: relative;" },
      "ABSOLUTE": { "css": "position: absolute;" }
    }
  },

  "dimensions": {
    "absoluteBoundingBox": {
      "width": { "css_property": "width", "unit": "px" },
      "height": { "css_property": "height", "unit": "px" }
    },
    "minWidth": { "css_property": "min-width", "unit": "px" },
    "maxWidth": { "css_property": "max-width", "unit": "px" },
    "minHeight": { "css_property": "min-height", "unit": "px" },
    "maxHeight": { "css_property": "max-height", "unit": "px" }
  },

  "fills": {
    "_description": "Figma fills array to CSS background",
    "type_mapping": {
      "SOLID": {
        "css_property": "background-color",
        "extract": "color",
        "tokenize": "color"
      },
      "GRADIENT_LINEAR": {
        "css_property": "background",
        "template": "linear-gradient({angle}deg, {stops})"
      },
      "GRADIENT_RADIAL": {
        "css_property": "background",
        "template": "radial-gradient({stops})"
      },
      "IMAGE": {
        "css_property": "background-image",
        "template": "url({imageRef})"
      }
    },
    "visible_false": {
      "css": "background: transparent;"
    },
    "opacity": {
      "css_property": "opacity"
    }
  },

  "strokes": {
    "_description": "Figma strokes to CSS border/outline",
    "strokeWeight": {
      "css_property": "border-width",
      "unit": "px"
    },
    "strokeAlign": {
      "INSIDE": { "css": "box-sizing: border-box;" },
      "CENTER": { "css": "box-sizing: border-box;", "note": "half inside, half outside" },
      "OUTSIDE": { "css_property": "outline", "note": "use outline instead of border" }
    },
    "strokes_array": {
      "type": "SOLID",
      "css_property": "border-color",
      "tokenize": "color"
    },
    "dashPattern": {
      "css_property": "border-style",
      "mapping": {
        "[]": "solid",
        "[n, n]": "dashed",
        "[1, n]": "dotted"
      }
    },
    "individualStrokeWeights": {
      "strokeTopWeight": { "css_property": "border-top-width" },
      "strokeRightWeight": { "css_property": "border-right-width" },
      "strokeBottomWeight": { "css_property": "border-bottom-width" },
      "strokeLeftWeight": { "css_property": "border-left-width" }
    }
  },

  "effects": {
    "_description": "Figma effects to CSS box-shadow/filter",
    "type_mapping": {
      "DROP_SHADOW": {
        "css_property": "box-shadow",
        "template": "{offsetX}px {offsetY}px {radius}px {spread}px {color}"
      },
      "INNER_SHADOW": {
        "css_property": "box-shadow",
        "template": "inset {offsetX}px {offsetY}px {radius}px {spread}px {color}"
      },
      "LAYER_BLUR": {
        "css_property": "filter",
        "template": "blur({radius}px)"
      },
      "BACKGROUND_BLUR": {
        "css_property": "backdrop-filter",
        "template": "blur({radius}px)"
      }
    }
  },

  "cornerRadius": {
    "_description": "Figma corner radius to CSS border-radius",
    "cornerRadius": {
      "css_property": "border-radius",
      "unit": "px",
      "tokenize": "radius"
    },
    "rectangleCornerRadii": {
      "mapping": [
        { "index": 0, "css_property": "border-top-left-radius" },
        { "index": 1, "css_property": "border-top-right-radius" },
        { "index": 2, "css_property": "border-bottom-right-radius" },
        { "index": 3, "css_property": "border-bottom-left-radius" }
      ]
    }
  },

  "typography": {
    "_description": "Figma text style to CSS typography",
    "style": {
      "fontFamily": { "css_property": "font-family", "tokenize": "font-family" },
      "fontSize": { "css_property": "font-size", "unit": "px", "tokenize": "font-size" },
      "fontWeight": { "css_property": "font-weight", "tokenize": "font-weight" },
      "lineHeightPx": { "css_property": "line-height", "unit": "px" },
      "lineHeightPercent": { "css_property": "line-height", "unit": "%" },
      "lineHeightPercentFontSize": { "css_property": "line-height", "calculate": "value / 100" },
      "letterSpacing": { "css_property": "letter-spacing", "unit": "px" },
      "textAlignHorizontal": {
        "LEFT": { "css": "text-align: left;" },
        "CENTER": { "css": "text-align: center;" },
        "RIGHT": { "css": "text-align: right;" },
        "JUSTIFIED": { "css": "text-align: justify;" }
      },
      "textAlignVertical": {
        "TOP": { "css": "vertical-align: top;" },
        "CENTER": { "css": "vertical-align: middle;" },
        "BOTTOM": { "css": "vertical-align: bottom;" }
      },
      "textDecoration": {
        "NONE": { "css": "text-decoration: none;" },
        "UNDERLINE": { "css": "text-decoration: underline;" },
        "STRIKETHROUGH": { "css": "text-decoration: line-through;" }
      },
      "textCase": {
        "ORIGINAL": { "css": "" },
        "UPPER": { "css": "text-transform: uppercase;" },
        "LOWER": { "css": "text-transform: lowercase;" },
        "TITLE": { "css": "text-transform: capitalize;" }
      }
    }
  },

  "constraints": {
    "_description": "Figma constraints for positioned elements",
    "horizontal": {
      "LEFT": { "css": "left: {x}px;" },
      "RIGHT": { "css": "right: {parentWidth - x - width}px;" },
      "LEFT_RIGHT": { "css": "left: {x}px; right: {parentWidth - x - width}px;" },
      "CENTER": { "css": "left: 50%; transform: translateX(-50%);" },
      "SCALE": { "css": "left: {x/parentWidth * 100}%; width: {width/parentWidth * 100}%;" }
    },
    "vertical": {
      "TOP": { "css": "top: {y}px;" },
      "BOTTOM": { "css": "bottom: {parentHeight - y - height}px;" },
      "TOP_BOTTOM": { "css": "top: {y}px; bottom: {parentHeight - y - height}px;" },
      "CENTER": { "css": "top: 50%; transform: translateY(-50%);" },
      "SCALE": { "css": "top: {y/parentHeight * 100}%; height: {height/parentHeight * 100}%;" }
    }
  },

  "clipping": {
    "clipsContent": {
      "true": { "css": "overflow: hidden;" },
      "false": { "css": "overflow: visible;" }
    }
  },

  "blendMode": {
    "PASS_THROUGH": { "css": "" },
    "NORMAL": { "css": "" },
    "MULTIPLY": { "css": "mix-blend-mode: multiply;" },
    "SCREEN": { "css": "mix-blend-mode: screen;" },
    "OVERLAY": { "css": "mix-blend-mode: overlay;" }
  },

  "visibility": {
    "visible": {
      "true": { "css": "" },
      "false": { "css": "display: none;" }
    },
    "opacity": {
      "css_property": "opacity",
      "range": [0, 1]
    }
  }
}
