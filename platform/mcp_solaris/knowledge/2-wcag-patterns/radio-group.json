{
  "_meta": {
    "pattern": "radio-group",
    "wcag_source": "https://www.w3.org/WAI/ARIA/apg/patterns/radio/",
    "version": "1.0.0",
    "updated": "2026-01-06"
  },

  "applies_to": ["radio", "radio-group", "radio-button"],

  "structure": {
    "group": {
      "element": "fieldset",
      "aria": { "role": "radiogroup" }
    },
    "legend": {
      "element": "legend",
      "required": true
    },
    "radio": {
      "element": "input",
      "attributes": { "type": "radio", "name": "group_name" },
      "aria": {
        "aria-checked": { "when": "custom" }
      }
    },
    "custom_radio": {
      "element": "div",
      "aria": {
        "role": "radio",
        "aria-checked": { "type": "boolean" },
        "tabindex": { "checked": "0", "unchecked": "-1" }
      },
      "when": "custom_styled"
    },
    "label": {
      "element": "label",
      "attributes": { "for": "radio_id" },
      "required": true
    }
  },

  "states": {
    "unchecked": {
      "aria-checked": "false",
      "checked": false,
      "tabindex": "-1",
      "data_attr": "data-state=unchecked"
    },
    "checked": {
      "aria-checked": "true",
      "checked": true,
      "tabindex": "0",
      "data_attr": "data-state=checked"
    },
    "disabled": {
      "aria-disabled": "true",
      "disabled": true
    }
  },

  "keyboard": {
    "ArrowRight": { "action": "select_next" },
    "ArrowDown": { "action": "select_next" },
    "ArrowLeft": { "action": "select_previous" },
    "ArrowUp": { "action": "select_previous" },
    "Space": { "action": "select_focused" }
  },

  "focus_management": {
    "pattern": "roving_tabindex",
    "wrap": true,
    "initial_focus": "checked_or_first"
  },

  "css_selectors": {
    "checked": ":checked, [aria-checked='true']",
    "unchecked": ":not(:checked), [aria-checked='false']",
    "disabled": ":disabled, [aria-disabled='true']",
    "focus": ":focus-visible"
  }
}
