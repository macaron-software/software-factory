{
  "_meta": {
    "source": "adobe-spectrum",
    "url": "https://spectrum.adobe.com/",
    "version": "2.x",
    "updated": "2026-01-06"
  },

  "principles": {
    "inclusive": "Accessible by default for all users",
    "rational": "Consistent, predictable patterns",
    "evolving": "Adapts to new platforms and contexts"
  },

  "global": {
    "focus_ring": {
      "style": "2px solid",
      "color": "blue-500",
      "offset": "2px",
      "border_radius": "inherit + 2px"
    },
    "motion": {
      "duration": {
        "100": "130ms",
        "200": "160ms",
        "300": "190ms",
        "400": "220ms",
        "500": "250ms"
      },
      "easing": {
        "ease-in": "cubic-bezier(0.5, 0, 1, 1)",
        "ease-out": "cubic-bezier(0, 0, 0.4, 1)",
        "ease-in-out": "cubic-bezier(0.45, 0, 0.4, 1)"
      }
    },
    "spacing": {
      "scale": {
        "size-0": "0",
        "size-10": "1px",
        "size-25": "2px",
        "size-50": "4px",
        "size-75": "6px",
        "size-100": "8px",
        "size-125": "10px",
        "size-150": "12px",
        "size-200": "16px",
        "size-250": "20px",
        "size-300": "24px",
        "size-400": "32px",
        "size-500": "40px",
        "size-600": "48px"
      }
    }
  },

  "components": {
    "action_button": {
      "sizes": {
        "S": { "height": "24px", "min_width": "24px", "font_size": "12px", "icon_size": "18px" },
        "M": { "height": "32px", "min_width": "32px", "font_size": "14px", "icon_size": "18px" },
        "L": { "height": "40px", "min_width": "40px", "font_size": "16px", "icon_size": "20px" },
        "XL": { "height": "48px", "min_width": "48px", "font_size": "18px", "icon_size": "22px" }
      },
      "variants": ["default", "accent", "negative", "primary", "secondary"],
      "states": {
        "hover": { "background": "gray-200" },
        "down": { "background": "gray-300" },
        "focus": { "focus_ring": true },
        "disabled": { "opacity": 0.3 }
      },
      "quiet_variant": {
        "background": "transparent",
        "border": "none"
      }
    },

    "textfield": {
      "sizes": {
        "S": { "height": "24px" },
        "M": { "height": "32px" },
        "L": { "height": "40px" },
        "XL": { "height": "48px" }
      },
      "label": {
        "position": "above",
        "required_indicator": "(required)",
        "optional_indicator": "- optional"
      },
      "help_text": {
        "position": "below",
        "variants": ["neutral", "negative"]
      },
      "validation": {
        "valid_icon": "checkmark",
        "invalid_icon": "alert",
        "aria_invalid": true
      }
    },

    "picker": {
      "description": "Select component in Spectrum",
      "sizes": ["S", "M", "L", "XL"],
      "label_position": ["top", "side"],
      "menu": {
        "max_height": "calc(100vh - 128px)",
        "min_width": "match trigger width"
      },
      "keyboard": {
        "ArrowDown": "open and focus first",
        "ArrowUp": "open and focus last",
        "Enter/Space": "select focused",
        "Escape": "close",
        "Home": "focus first",
        "End": "focus last",
        "PageUp/PageDown": "scroll by page"
      }
    },

    "checkbox": {
      "sizes": ["S", "M", "L", "XL"],
      "states": ["unchecked", "checked", "indeterminate"],
      "emphasis": {
        "default": "border changes to fill on check",
        "low": "border remains, checkmark appears"
      },
      "label_position": "after",
      "invalid_state": {
        "border_color": "negative",
        "error_icon": true
      }
    },

    "switch": {
      "sizes": ["S", "M", "L", "XL"],
      "label_position": ["start", "end"],
      "emphasis": {
        "default": "filled track when on",
        "low": "subtle track always"
      }
    },

    "tabs": {
      "orientations": ["horizontal", "vertical"],
      "sizes": ["S", "M", "L", "XL"],
      "density": ["compact", "regular"],
      "quiet_variant": "no visible container",
      "emphasized_variant": "thicker selection indicator",
      "selection_indicator": {
        "position": "bottom for horizontal, side for vertical",
        "animation": "slide to selected tab"
      }
    },

    "accordion": {
      "density": ["compact", "regular", "spacious"],
      "sizes": ["S", "M", "L"],
      "quiet_variant": "no container background",
      "selection_behavior": {
        "single": "one item open at a time",
        "multiple": "any combination"
      }
    },

    "dialog": {
      "sizes": {
        "S": "400px",
        "M": "480px",
        "L": "640px",
        "fullscreen": "100vw - margins",
        "fullscreenTakeover": "100vw 100vh"
      },
      "dismissable": {
        "true": "click outside or X button closes",
        "false": "explicit action required"
      },
      "hero_image": "optional image at top",
      "button_layout": {
        "primary": "rightmost",
        "secondary": "left of primary",
        "cancel": "leftmost"
      }
    },

    "tooltip": {
      "delay": "1000ms (configurable)",
      "placement": ["top", "bottom", "left", "right", "start", "end"],
      "variants": ["neutral", "informative", "positive", "negative"],
      "max_width": "200px"
    },

    "menu": {
      "sections": {
        "with_heading": true,
        "dividers_between": true
      },
      "selection_mode": ["none", "single", "multiple"],
      "keyboard_nav": {
        "typeahead": true,
        "focus_wraps": true
      },
      "unavailable_items": {
        "visible": true,
        "grayed_out": true,
        "tooltip_explains": true
      }
    }
  },

  "accessibility_patterns": {
    "keyboard_focus": {
      "visible_focus_ring": "always",
      "focus_ring_style": "2px solid blue-500, 2px offset",
      "skip_disabled_items": true
    },
    "screen_reader": {
      "live_regions": "for dynamic content",
      "aria_describedby": "for help text",
      "aria_invalid": "for validation errors"
    },
    "reduced_motion": {
      "respect_prefers_reduced_motion": true,
      "fallback": "instant state changes"
    }
  }
}
