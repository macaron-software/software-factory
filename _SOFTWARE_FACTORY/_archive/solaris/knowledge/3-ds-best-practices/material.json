{
  "_meta": {
    "source": "material-ui",
    "url": "https://mui.com/material-ui/",
    "version": "5.x",
    "updated": "2026-01-06"
  },

  "global": {
    "transitions": {
      "duration": {
        "shortest": "150ms",
        "shorter": "200ms",
        "short": "250ms",
        "standard": "300ms",
        "complex": "375ms",
        "entering": "225ms",
        "leaving": "195ms"
      },
      "easing": {
        "easeInOut": "cubic-bezier(0.4, 0, 0.2, 1)",
        "easeOut": "cubic-bezier(0.0, 0, 0.2, 1)",
        "easeIn": "cubic-bezier(0.4, 0, 1, 1)",
        "sharp": "cubic-bezier(0.4, 0, 0.6, 1)"
      }
    },
    "spacing": {
      "unit": "8px",
      "touch_target_min": "48px",
      "focus_ring_offset": "2px"
    },
    "elevation": {
      "levels": [0, 1, 2, 3, 4, 6, 8, 12, 16, 24],
      "shadows": {
        "0": "none",
        "1": "0px 2px 1px -1px rgba(0,0,0,0.2), 0px 1px 1px 0px rgba(0,0,0,0.14), 0px 1px 3px 0px rgba(0,0,0,0.12)",
        "2": "0px 3px 1px -2px rgba(0,0,0,0.2), 0px 2px 2px 0px rgba(0,0,0,0.14), 0px 1px 5px 0px rgba(0,0,0,0.12)",
        "4": "0px 2px 4px -1px rgba(0,0,0,0.2), 0px 4px 5px 0px rgba(0,0,0,0.14), 0px 1px 10px 0px rgba(0,0,0,0.12)",
        "8": "0px 5px 5px -3px rgba(0,0,0,0.2), 0px 8px 10px 1px rgba(0,0,0,0.14), 0px 3px 14px 2px rgba(0,0,0,0.12)"
      }
    }
  },

  "components": {
    "button": {
      "states": {
        "hover": {
          "background_opacity": 0.04,
          "transition": "background-color 250ms cubic-bezier(0.4, 0, 0.2, 1)"
        },
        "focus": {
          "outline": "none",
          "ring": "0 0 0 2px currentColor",
          "ring_offset": "2px"
        },
        "active": {
          "transform": "none",
          "background_opacity": 0.08
        },
        "disabled": {
          "opacity": 0.38,
          "pointer_events": "none"
        },
        "loading": {
          "pointer_events": "none",
          "spinner_position": "center"
        }
      },
      "ripple": {
        "enabled": true,
        "duration": "550ms",
        "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
      },
      "sizes": {
        "small": { "height": "32px", "padding": "4px 10px", "font_size": "0.8125rem" },
        "medium": { "height": "36px", "padding": "6px 16px", "font_size": "0.875rem" },
        "large": { "height": "42px", "padding": "8px 22px", "font_size": "0.9375rem" }
      }
    },

    "input": {
      "label": {
        "position": "floating",
        "transform_origin": "top left",
        "transition": "transform 200ms cubic-bezier(0.0, 0, 0.2, 1), color 200ms"
      },
      "states": {
        "focus": {
          "label_color": "primary",
          "border_width": "2px",
          "border_color": "primary"
        },
        "error": {
          "label_color": "error",
          "border_color": "error",
          "helper_text_color": "error"
        },
        "disabled": {
          "opacity": 0.38,
          "border_style": "dotted"
        }
      },
      "helper_text": {
        "position": "below",
        "margin_top": "3px",
        "font_size": "0.75rem"
      },
      "variants": ["outlined", "filled", "standard"]
    },

    "select": {
      "dropdown_shadow": "0px 5px 5px -3px rgba(0,0,0,0.2), 0px 8px 10px 1px rgba(0,0,0,0.14), 0px 3px 14px 2px rgba(0,0,0,0.12)",
      "max_height": "304px",
      "option_height": "48px",
      "animation": {
        "open": "transform 120ms cubic-bezier(0, 0, 0.2, 1)",
        "close": "transform 120ms cubic-bezier(0, 0, 0.2, 1)"
      }
    },

    "checkbox": {
      "size": "18px",
      "ripple_size": "40px",
      "transition": "background-color 150ms cubic-bezier(0.4, 0, 0.2, 1)"
    },

    "switch": {
      "track": {
        "width": "34px",
        "height": "14px",
        "border_radius": "7px",
        "opacity_off": 0.38,
        "opacity_on": 0.5
      },
      "thumb": {
        "size": "20px",
        "shadow": "0px 2px 1px -1px rgba(0,0,0,0.2), 0px 1px 1px 0px rgba(0,0,0,0.14), 0px 1px 3px 0px rgba(0,0,0,0.12)"
      },
      "transition": "transform 150ms cubic-bezier(0.4, 0, 0.2, 1)"
    },

    "modal": {
      "backdrop_color": "rgba(0, 0, 0, 0.5)",
      "z_index": 1300,
      "animation": {
        "fade_in": "opacity 225ms cubic-bezier(0.4, 0, 0.2, 1)",
        "fade_out": "opacity 195ms cubic-bezier(0.4, 0, 0.2, 1)"
      }
    },

    "tooltip": {
      "delay_show": "100ms",
      "delay_hide": "0ms",
      "padding": "4px 8px",
      "font_size": "0.6875rem",
      "max_width": "300px",
      "border_radius": "4px",
      "arrow": true
    },

    "tabs": {
      "indicator": {
        "height": "2px",
        "transition": "all 300ms cubic-bezier(0.4, 0, 0.2, 1)"
      },
      "tab_height": "48px",
      "min_width": "90px"
    },

    "accordion": {
      "transition": "margin 150ms cubic-bezier(0.4, 0, 0.2, 1)",
      "content_transition": "height 300ms cubic-bezier(0.4, 0, 0.2, 1)",
      "expanded_margin": "16px 0"
    }
  }
}
