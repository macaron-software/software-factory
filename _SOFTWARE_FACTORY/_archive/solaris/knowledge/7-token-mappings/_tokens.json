{
  "_meta": {
    "description": "Token mappings for Figma values to CSS variables",
    "version": "1.0.0",
    "updated": "2026-01-07",
    "source": "Extracted from Solaris foundations"
  },

  "colors": {
    "_description": "Figma RGBA to CSS color variables",
    "brand": {
      "#003DA5": "var(--color-brand-primary)",
      "#FFD100": "var(--color-brand-secondary)",
      "#D91414": "var(--color-critical)",
      "#00875A": "var(--color-success)",
      "#FF8B00": "var(--color-warning)"
    },
    "neutral": {
      "#FFFFFF": "var(--color-white)",
      "#000000": "var(--color-black)",
      "#F5F5F5": "var(--color-neutral-50)",
      "#E5E5E5": "var(--color-neutral-100)",
      "#CCCCCC": "var(--color-neutral-200)",
      "#999999": "var(--color-neutral-400)",
      "#666666": "var(--color-neutral-600)",
      "#333333": "var(--color-neutral-800)",
      "#1A1A1A": "var(--color-neutral-900)"
    },
    "semantic": {
      "background": {
        "#FFFFFF": "var(--color-background-default)",
        "#F5F5F5": "var(--color-background-neutral)",
        "#003DA5": "var(--color-background-brand)"
      },
      "text": {
        "#1A1A1A": "var(--color-text-primary)",
        "#666666": "var(--color-text-secondary)",
        "#999999": "var(--color-text-tertiary)",
        "#FFFFFF": "var(--color-text-inverse)"
      },
      "border": {
        "#E5E5E5": "var(--color-border-default)",
        "#CCCCCC": "var(--color-border-strong)",
        "#003DA5": "var(--color-border-focus)"
      }
    },
    "tolerance": {
      "_note": "Allow small variations in alpha/rounding",
      "alpha_threshold": 0.01,
      "rgb_threshold": 2
    }
  },

