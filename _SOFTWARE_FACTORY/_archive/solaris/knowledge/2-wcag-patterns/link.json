{
  "_meta": {
    "pattern": "link",
    "wcag_source": "https://www.w3.org/WAI/ARIA/apg/patterns/link/",
    "version": "1.0.0",
    "updated": "2026-01-08"
  },

  "applies_to": ["link", "anchor", "text-link"],

  "structure": {
    "link": {
      "element": "a",
      "attributes": ["href"],
      "aria": {
        "aria-label": { "when": "icon_only_or_unclear_text" },
        "aria-describedby": { "when": "additional_context_needed" }
      }
    }
  },

  "states": {
    "default": { "css": "" },
    "hover": { "css": ":hover", "text_decoration": "underline" },
    "focus": { "css": ":focus-visible", "outline": "2px solid var(--color-callout-border-info)" },
    "visited": { "css": ":visited", "note": "Optional, depends on design" },
    "active": { "css": ":active" }
  },

  "keyboard": {
    "Enter": { "action": "activate_link" }
  },

  "accessibility_requirements": {
    "focus_visible": true,
    "min_touch_target": "44px",
    "color_contrast": "4.5:1 for normal text, 3:1 for large text",
    "underline_or_other_indicator": "Required to distinguish from regular text"
  },

  "css_implementation": {
    "hover": "text-decoration: underline;",
    "focus": "outline: var(--border-width-2) solid var(--color-callout-border-info); outline-offset: 2px;"
  }
}
