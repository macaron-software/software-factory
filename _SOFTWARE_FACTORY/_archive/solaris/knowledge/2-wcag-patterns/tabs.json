{
  "_meta": {
    "pattern": "tabs",
    "wcag_source": "https://www.w3.org/WAI/ARIA/apg/patterns/tabs/",
    "version": "1.0.0",
    "updated": "2026-01-06"
  },

  "applies_to": ["tabs", "tab-group", "tabbed-interface"],

  "variants": {
    "automatic": {
      "description": "Panel changes on arrow key (focus follows selection)",
      "activation": "automatic"
    },
    "manual": {
      "description": "Panel changes on Enter/Space (focus independent of selection)",
      "activation": "manual"
    }
  },

  "structure": {
    "tablist": {
      "element": "div",
      "aria": {
        "role": "tablist",
        "aria-label": { "type": "string", "required": true },
        "aria-orientation": { "values": ["horizontal", "vertical"], "default": "horizontal" }
      }
    },
    "tab": {
      "element": "button",
      "aria": {
        "role": "tab",
        "aria-selected": { "type": "boolean" },
        "aria-controls": { "type": "idref", "points_to": "tabpanel" },
        "tabindex": { "selected": "0", "unselected": "-1" }
      }
    },
    "tabpanel": {
      "element": "div",
      "aria": {
        "role": "tabpanel",
        "aria-labelledby": { "type": "idref", "points_to": "tab" },
        "tabindex": "0"
      },
      "hidden_when": "not_selected"
    }
  },

  "states": {
    "selected": {
      "tab": { "aria-selected": "true", "tabindex": "0" },
      "tabpanel": { "hidden": false },
      "data_attr": "data-state=active"
    },
    "unselected": {
      "tab": { "aria-selected": "false", "tabindex": "-1" },
      "tabpanel": { "hidden": true },
      "data_attr": "data-state=inactive"
    },
    "disabled": {
      "tab": { "aria-disabled": "true", "tabindex": "-1" }
    }
  },

  "keyboard": {
    "horizontal": {
      "ArrowRight": { "action": "focus_next_tab" },
      "ArrowLeft": { "action": "focus_previous_tab" },
      "Home": { "action": "focus_first_tab" },
      "End": { "action": "focus_last_tab" },
      "Enter": { "action": "activate_tab", "when": "manual" },
      "Space": { "action": "activate_tab", "when": "manual" },
      "Delete": { "action": "delete_tab", "when": "deletable" }
    },
    "vertical": {
      "ArrowDown": { "action": "focus_next_tab" },
      "ArrowUp": { "action": "focus_previous_tab" },
      "Home": { "action": "focus_first_tab" },
      "End": { "action": "focus_last_tab" }
    }
  },

  "focus_management": {
    "pattern": "roving_tabindex",
    "description": "One tab has tabindex=0, others have tabindex=-1",
    "wrap": true,
    "skip_disabled": true
  },

  "animation": {
    "tab_indicator": { "property": "transform, width", "duration": "200ms" },
    "panel_transition": { "property": "opacity", "duration": "150ms" }
  },

  "css_selectors": {
    "selected": "[aria-selected='true']",
    "unselected": "[aria-selected='false']",
    "disabled": "[aria-disabled='true']",
    "focus": ":focus-visible"
  }
}
